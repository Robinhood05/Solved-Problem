#include <iostream>
#include<bits/stdc++.h>
using namespace std;
int main()
{
 
 int test;
 cin>>test;
 while(test--){
     
     
     
     
    long long int n,k;
     cin>>n>>k;
     
    long long int sum1=0;
     long long int sum2=0;
     
     long long int first= n-k+1;
     sum1 = (n*(n+1))/2;
     sum2 = ((first-1) * (first))/2;
     
     long long int result = sum1-sum2;
     
     if (result%2==0){
         cout<<"YES"<<endl;
     }
     else {
         cout<<"NO"<<endl;
     }
